/* light/dark mode colours */
:root {
  --bgcolor: rgb(250, 250, 250);
  --fontcolor: rgb(26, 26, 26);
  --fontcoloralt: rgb(88, 88, 90);
  --linkcolor: rgb(238, 51, 51);
