/* general */
body {
  font-family: Times, serif;
  letter-spacing: 0.016em;
  margin: 0px;
  height: 100vh;
  width: 100%;
}

h1, h2, h3, h4, h5, h6 {
  letter-spacing: 0.03em;
}

h1 {
  font-size: var(--h1-font-size);
  margin: 0;
  padding-bottom: calc(0.25 * var(--line-height));
  border-bottom: 1px solid var(--fontcoloralt);
}

h2 {
  font-size: var(--h2-font-size);
  margin: calc(1.5 * var(--line-height)) 0 0 0;
}

p, li {
  color: var(--fontcolor);
  font-size: var(--body-font-size);
}

sup, sub {
  font-size: calc(0.9 * var(--small-font-size));
}

ul, ol {
  list-style-position: outside;
  margin: calc(0.9 * var(--line-height)) 0 0 0;
  padding-left: var(--line-height);
}


code {
  font-size: calc(0.92 * var(--small-font-size));
  line-height: calc(0.8 * var(--line-height));
}

p code {
  background-color: var(--prebgcolor2);
  padding: calc(0.1 * var(--line-height));
}

pre {
  padding: calc(0.8 * var(--line-height));
  overflow-x: scroll;
}

a:link {
  text-decoration: none;
  color: var(--fontcoloralt);
  font-size: var(--small-font-size);
}

a:visited {
  color: var(--fontcoloralt);
}

a:hover {
  text-decoration: underline;
  color: var(--linkcolor);
}

a:active {
  text-decoration: underline;
  color: var(--linkcolor);
}

main a:link {
  text-decoration: underline;
  text-decoration-style: dotted;
  color: var(--fontcolor);
  font-size: var(--body-font-size);
}

main a:visited {
  color: var(--fontcolor);
}

main a:hover {
  text-decoration-style: solid;
  color: var(--linkcolor);
}

main a:active {
  text-decoration-style: solid;
  color: var(--linkcolor);
}

.cite sup {
  font-size: calc(0.2 * var(--small-font-size));
}


